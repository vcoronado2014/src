#container {
  text-align: center;

  position: absolute;
  left: 0;
  right: 0;
  top: 50%;
  transform: translateY(-50%);
}

#container strong {
  font-size: 20px;
  line-height: 26px;
}

#container p {
  font-size: 16px;
  line-height: 22px;

  color: #8c8c8c;

  margin: 0;
}

#container a {
  text-decoration: none;
}
.reservar{
  margin-top: -70px;
  float: right;
  margin-right: 20px;
  --background: var(--ion-color-primary);
  color: white;
  padding: 20px;
  font-size: 1.2em;
}
.footer {
  width: 100%;
  position: fixed;
  left: 0;
  bottom: 0;
  text-align: end;;
}
/* elementos del menu */
.badge-notificaciones{
  --padding-top: 3px;
  --padding-end: 4px;
  --padding-bottom: 4px;
  --padding-start: 4px;
  border-radius: 16px;
  position: absolute;
  top: -3px;
  left: 15px;
}
.slides-back{
  background: #5133A5;
  text-align: left;
}
.titulo-slide{
  color: #F4F2FA;
  font-size: 1em;
  text-align: left;
}
.subtitulo-slide{
  color: #AFA0D5;
  text-align: left;
}
.boton{
  float: right;
}
.swiper-pagination-bullet-active {
  background: white;
  opacity: 1;
}
ion-slide{
  display: block;
  background: #5133A5;
  text-align: left;
  min-height: 200px;
}
ion-slides{
  --bullet-background: yellow;
  --bullet-background-active: #ff4081;
  --opacity: 1;
}
.swiper-pagination-bullet {
  width: 8px;
  height: 8px;
  display: inline-block;
  border-radius: 100%;
  opacity: 1;
}
.slide-content-padding{
  padding: 16px 16px 0px 16px;
  margin-bottom: 5px;
}
.slide-buttons-padding{
  padding: 0px 16px 16px 16px;
}

//Ajustes de estilo

.header{
  height: 56px;
  font-family: Roboto, "Helvetica Neue", sans-serif;
}

.toolbar{
  height: 56px;
}

.title{
  font-family: Roboto, "Helvetica Neue", sans-serif;
  font-size: 20px;
  font-weight: 500;
}

.menu-button{
  padding-top: 16px;
}

.avatar{
  height: 40px;
  width: 40px;
}

.texAvatarContainer{
  flex-direction: column;
  height: 70px;
  padding-top: 16px;
}

ion-icon {
  color: #00000099;
}

ion-item.listItem {
  height: 48px;
}

.text-avatar{
  font-size: 1.25em;
  overflow:hidden;
  text-overflow: ellipsis;
  white-space:nowrap;
  width:80%;
}